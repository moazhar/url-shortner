{
  "name": "url-shortner",
  "version": "1.0.0",
  "description": "A URL shortener is a tool that takes a long URL and converts it into a shorter, more manageable link. This shorter link redirects to the original, long URL when clicked.",
  "main": "app.js",
  "scripts": {
    "mongo:start": "docker start mongodb || docker run -d --name mongodb -p 27017:27017 -v mongodb_data:/data/db mongo:latest",
    "mongo:stop": "docker stop mongodb && docker rm mongodb",
    "start:dev": "export NODE_ENV=development && ts-node-dev --files src/app.ts",
    "start:prod:build": "sh build.sh",
    "start:prod:deploy": "sh deploy.sh",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/moazhar/url-shortner.git"
  },
  "keywords": [
    "Backend",
    "Frontend",
    "Node.JS",
    "Typescript",
    "Express",
    "MongoDB",
    "URL",
    "Shortner"
  ],
  "author": "Mohammed Azhar",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/moazhar/url-shortner/issues"
  },
  "homepage": "https://github.com/moazhar/url-shortner#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "envalid": "^8.0.0",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "http-status-codes": "^2.3.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.5.2",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.1.0",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.8",
    "prettier": "^3.3.3",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "git add"
    ]
  }
}
